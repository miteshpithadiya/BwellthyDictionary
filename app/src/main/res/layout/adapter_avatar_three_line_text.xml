<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/avatar_three_line_text_tile_height"
                android:orientation="vertical"
                android:paddingBottom="@dimen/avatar_three_line_text_text_padding_bottom"
                android:paddingLeft="@dimen/avatar_three_line_text_padding_left"
                android:paddingTop="@dimen/avatar_three_line_text_text_padding_top">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_logo"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txt_primary"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@id/txt_primary"
        style="@style/avatar_with_text_icon_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_secondary"
        style="@style/avatar_with_text_icon_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_primary"/>
</RelativeLayout>